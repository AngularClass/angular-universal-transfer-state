{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "baseUrl": ".",
    "moduleResolution": "node",
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "dist/es2015",
    "rootDir": "src",
    "lib": ["es6", "dom"]
  },
  "files": [
    "./src/browser.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipMetadataEmit" : false
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
